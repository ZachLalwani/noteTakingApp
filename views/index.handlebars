<div class="note-section row">
   <div class="col-lg-6">
        <h4>Your Notes:</h4>
        <div id="notes">
            {{#each notes}}
            <div class="note">
                <span class="input"><textarea data-id="{{ @index }}">{{ this }}</textarea></span>

                <button class="remove btn btn-xs" data-id="{{ @index }}">Delete</i></button>
            </div>
            {{/each}}
        </div>
    </div>
     <div class="col-lg-6">
        <h4>{{user}}'s Notes</h4>
        <p>Type out a new note:</p>
        <form id="add" class="row">
            <div class="col col-sm-9">
                <textarea type="text" name="note"></textarea>
            </div>
            <div class="col col-sm-3">
                <input type="submit" value="New">
            </div>
        </form>
    </div>
    
</div>